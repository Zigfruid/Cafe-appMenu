<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_menu"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/btnDrink"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFastFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drink"/>
        <ImageView
            android:id="@+id/btnPizza"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/btnDrink"
            app:layout_constraintBottom_toBottomOf="@id/btnDrink"
            app:layout_constraintStart_toEndOf="@id/btnDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pizza"/>
        <ImageView
            android:id="@+id/btnLavash"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnPizza"
            app:layout_constraintTop_toTopOf="@id/btnPizza"
            app:layout_constraintBottom_toBottomOf="@id/btnPizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lavash"/>
        <ImageView
            android:id="@+id/btnBurger"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnLavash"
            app:layout_constraintTop_toTopOf="@id/btnLavash"
            app:layout_constraintBottom_toBottomOf="@id/btnLavash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/burger"/>



    <ImageView
        android:id="@+id/tvFastFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tvfastfood"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:id="@+id/ivSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFastFood"
        app:layout_constraintBottom_toBottomOf="@id/tvFastFood"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_search"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/rv_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemBackground="@android:color/white"
        app:menu="@menu/menu_item"
         />
</androidx.constraintlayout.widget.ConstraintLayout>